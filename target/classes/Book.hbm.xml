<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="nl.sogyo.library.model.command.Book" table="Books">
    	<id name="id" type="int" column="ID">
         	<generator class="native"/>
      	</id>
      	<property name="title" column="Title" type="string"/>
      	<property name="subtitle" column="Subtitle" type="string"/>
     	<property name="authorForename" column="AuthorForename" type="string"/>
      	<property name="authorSurname" column="AuthorSurname" type="string"/>
      	<set name="authors" cascade="all" table="BooksAuthors">
         	<key column="BookID"/>
         	<many-to-many column="AuthorID" class="nl.sogyo.library.model.command.Author"/>
      	</set>
   		<many-to-one name="category" class="nl.sogyo.library.model.command.Category"
        	column="CategoryID" not-null="true" cascade="all" />
      	<many-to-one name="publisher" class="nl.sogyo.library.model.command.Publisher"
        	column="PublisherID" not-null="true" cascade="all" />
      	<property name="yearFirstPublication" column="YearFirstPublication" type="short"/>
      	<property name="isbn" column="ISBN" type="string"/>
      	<property name="pages" column="Pages" type="short"/>
      	<property name="language" column="Language" type="string"/>
   	</class>
</hibernate-mapping>